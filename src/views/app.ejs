<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <title>L-Tarefa</title>
</head>
<body>
    <%- include('partials/header') %>

    <div class="container mt-5">
        <h1>Lista de Tarefas</h1>

        <ul class="list-group">
            <% taskLists.forEach( taskList => { %>
                <li class="list-group-item d-flex align-items-center justify-content-between">
                    <a href="/app/<%= taskList.id %>" class="text-body-emphasis fs-5 text-decoration-none">
                        <%= taskList.title %>
                    </a>
    
                    <form action="/app/<%= taskList.id %>/excluir" method="post">
                        <button type="submit" class="btn btn-sm btn-danger">Excluir</button>
                    </form>
                </li> 
            <% }); %>
        </ul>
        <a href="/app/nova-lista" class="btn btn-primary mt-3">Nova Lista de Tarefa</a>
    </div>

    <%- include('partials/footer') %>
</body>
</html>